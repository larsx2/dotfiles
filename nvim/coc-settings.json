{
  "coc.preferences.formatOnSaveFiletypes": [
    "terraform"
  ],
  "languageserver": {
    "terraform": {
      "command": "terraform-ls",
      "args": ["serve"],
      "filetypes": ["terraform", "tf"],
      "initializationOptions": {},
      "settings": {}
    },
    "graphql": {
      "command": "graphql-lsp",
      "args": ["server", "-m", "stream"],
      "filetypes": ["typescript", "typescriptreact", "graphql"],
      "settings": {
        "graphql-config.load.legacy": true
      }
    }
  }
}
